{
  "name": "tiddlywiki-mcp-server",
  "version": "1.0.1",
  "description": "MCP server for TiddlyWiki with stdio and HTTP transport support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tiddlywiki-mcp-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ppetru/tiddlywiki-mcp.git"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepare": "lefthook install"
  },
  "keywords": [
    "mcp",
    "tiddlywiki",
    "model-context-protocol"
  ],
  "author": "Petru Paler <petru@paler.net> (https://petru.paler.net)",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "better-sqlite3": "^12.4.1",
    "diff": "^5.2.0",
    "express": "^4.21.2",
    "gpt-tokenizer": "^3.4.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^5.2.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^2.0.13",
    "prettier": "^3.4.2",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.8"
  }
}
